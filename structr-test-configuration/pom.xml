<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.structr</groupId>
		<artifactId>structr</artifactId>
		<version>6.0-SNAPSHOT</version>
	</parent>

    <properties>
        <skipDockerTestDB>true</skipDockerTestDB>
    </properties>

	<artifactId>structr-test-configuration</artifactId>
	<packaging>pom</packaging>
	<name>Structr Test Configuration</name>

	<profiles>
		<profile>
			<id>test-neo4j</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>database</name>
					<value>neo4j</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>3.5.4</version>
						<configuration>
							<argLine>-Duser.language=en -Duser.region=GB -Duser.timezone=UTC</argLine>
							<excludes>
								<exclude>**/*.java</exclude>
							</excludes>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>3.5.4</version>
						<configuration>
							<includes>
								<include>**/*Test.java</include>
							</includes>
							<argLine>-Xms2g -Xmx2g -Duser.timezone=UTC</argLine>
							<reuseForks>false</reuseForks>
							<forkCount>${test.forkCount}</forkCount>
							<skipTests>${skipTests}</skipTests>
							<rerunFailingTestsCount>2</rerunFailingTestsCount>
							<!--redirectTestOutputToFile>true</redirectTestOutputToFile-->
							<systemPropertyVariables>
								<testDatabaseDriver>org.structr.bolt.BoltDatabaseService</testDatabaseDriver>
								<testDatabaseConnection>${env.testDatabaseConnection}</testDatabaseConnection>
							</systemPropertyVariables>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>io.fabric8</groupId>
						<artifactId>docker-maven-plugin</artifactId>
						<version>0.40.2</version>
                        <configuration>
                            <autoCreateCustomNetworks>true</autoCreateCustomNetworks>
                            <removeMode>all</removeMode>
                            <keepContainer>false</keepContainer>
                        </configuration>
						<executions>
							<execution>
								<id>prepare-database</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
								</goals>
								<configuration>

									<images>
										<image>
											<name>${test.neo4j.version}</name>
											<alias>database</alias>
											<run>
												<ports>
													<port>7689:7687</port>
												</ports>
												<wait>
													<log>(.?)Bolt enabled on(.?)</log>
													<time>20000</time>
												</wait>
												<env>
													<NEO4J_AUTH>neo4j/admin123</NEO4J_AUTH>
													<NEO4J_ACCEPT_LICENSE_AGREEMENT>yes</NEO4J_ACCEPT_LICENSE_AGREEMENT>
													<NEO4J_server_memory_heap_max__size>2G</NEO4J_server_memory_heap_max__size>
													<NEO4J_dbms_security_auth__minimum__password__length>5</NEO4J_dbms_security_auth__minimum__password__length>
												</env>
											</run>
										</image>
									</images>
									<skip>${skipDockerTestDB}</skip>
								</configuration>
							</execution>
							<execution>
								<id>remove-database</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop</goal>
								</goals>
								<configuration>
									<skip>${skipDockerTestDB}</skip>
                                    <executeStopOnVMShutdown>true</executeStopOnVMShutdown>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>test-in-memory-database</id>
			<activation>
				<property>
					<name>database</name>
					<value>in-memory</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>3.5.4</version>
						<configuration>
							<includes>
								<include>**/*Test.java</include>
							</includes>
							<argLine>-Xms8g -Xmx8g -Duser.timezone=UTC</argLine>
							<reuseForks>false</reuseForks>
							<forkCount>${test.forkCount}</forkCount>
							<skipTests>${skipTests}</skipTests>
							<rerunFailingTestsCount>2</rerunFailingTestsCount>
							<systemPropertyVariables>
								<testDatabaseDriver>org.structr.memory.MemoryDatabaseService</testDatabaseDriver>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
