<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-app_2_4.xsd"
        version="2.4">
	<context-param>
		<description>Internal config service class</description>
		<param-name>config-service-class</param-name>
		<param-value>org.structr.ui.config.StructrConfigService</param-value>
	</context-param>
	<filter>
		<filter-name>PerformanceFilter</filter-name>
		<filter-class>org.apache.click.extras.filter.PerformanceFilter</filter-class>
		<init-param>
			<param-name>compression-enabled</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>application-version</param-name>
			<param-value>0.4.4-SNAPSHOT</param-value>
		</init-param>
		<init-param>
			<param-name>cacheable-paths</param-name>
			<param-value>/structr/view/*, /view/*, /images/*, /click/*, /click/tree/*, /click/css/*, /click/tree/images/*, /assets/*, /css/*, /js/*, *.png, *.gif, *.jpg, *.css, *.js</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.css</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.js</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.gif</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.jpg</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.png</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<url-pattern>*.svg</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PerformanceFilter</filter-name>
		<servlet-name>ClickServlet</servlet-name>
	</filter-mapping>
	<listener>
		<listener-class>org.structr.context.ApplicationContextListener</listener-class>
	</listener>
	<filter>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
        <!-- set the amount of seconds the conf file will be checked for reload
        can be a valid integer (0 denotes check every time,
        -1 denotes no reload check, default -1) -->
		<init-param>
			<param-name>confReloadCheckInterval</param-name>
			<param-value>-1</param-value>
		</init-param>
<!--		<init-param>
			<param-name>logLevel</param-name>
			<param-value>DEBUG</param-value>
		</init-param>-->
	</filter>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>ClickServlet</servlet-name>
		<servlet-class>org.apache.click.ClickServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>Authenticator</param-name>
			<param-value>org.structr.core.auth.StructrAuthenticator</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClickServlet</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>StructrRestServlet</servlet-name>
		<servlet-class>org.structr.rest.servlet.JsonRestServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>PropertyFormat</param-name>
			<param-value>NestedKeyValueType</param-value>
		</init-param>
		<init-param>
			<param-name>ConstraintProvider</param-name>
			<param-value>org.structr.rest.constraint.StructrConstraintProvider</param-value>
		</init-param>
		<init-param>
			<param-name>Authenticator</param-name>
			<param-value>org.structr.rest.auth.RestAuthenticator</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>StructrRestServlet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

    <!--  custom context parameter start -->
	<context-param>
		<description>structr config file path</description>
		<param-name>configfile.path</param-name>
		<param-value>${configfile.path}</param-value>
	</context-param>
    <!--  custom context parameter end -->
	<welcome-file-list>
		<welcome-file>login.htm</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>403</error-code>
		<location>/login.htm</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/not-found.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error.html</location>        
	</error-page>
	<session-config>
		<session-timeout>10</session-timeout>
		<cookie-config>
			<http-only>true</http-only>
		</cookie-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
</web-app>

