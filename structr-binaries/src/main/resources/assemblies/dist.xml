
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<moduleSets>
		<moduleSet>
			<binaries>
				<directoryMode>0755</directoryMode>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>${assemblies.base.path}</directory>
			<outputDirectory></outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-tests.jar</exclude>
			</excludes>

		</fileSet>
		<fileSet>
			<directory>${assemblies.base.path}/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${assemblies.resources.path}/structr</directory>
			<outputDirectory>structr</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${assemblies.resources.path}/logs</directory>
			<outputDirectory>logs</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/amd64/prunsrv.exe</source>
			<outputDirectory>bin/commons-daemon/amd64</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/LICENSE.txt</source>
			<outputDirectory>bin/commons-daemon</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/LICENSE.txt</source>
			<outputDirectory>bin/commons-daemon</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/NOTICE.txt</source>
			<outputDirectory>bin/commons-daemon</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/prunmgr.exe</source>
			<outputDirectory>bin/commons-daemon</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/prunsrv.exe</source>
			<outputDirectory>bin/commons-daemon</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/commons-daemon/RELEASE-NOTES.txt</source>
			<outputDirectory>bin/commons-daemon</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/config</source>
			<outputDirectory>bin</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/start</source>
			<outputDirectory>bin</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/start.cmd</source>
			<outputDirectory>bin</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/stop</source>
			<outputDirectory>bin</outputDirectory>
		</file>
		<file>
			<source>${assemblies.resources.path}/bin/docker.sh</source>
			<outputDirectory>bin</outputDirectory>
		</file>
	</files>
</assembly>
